{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "functions": {
    "api/posts.js": {
      "maxDuration": 10
    },
    "api/posts/[id].js": {
      "maxDuration": 10
    },
    "api/comments.js": {
      "maxDuration": 10
    },
    "api/comments/[postId].js": {
      "maxDuration": 10
    },
    "api/admin/data.js": {
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/login",
      "dest": "/public/login.html"
    },
    {
      "src": "/admin",
      "dest": "/public/admin.html"
    },
    {
      "src": "/post/(.*)",
      "dest": "/public/post.html"
    },
    {
      "src": "/styles.css",
      "dest": "/public/styles.css"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
} 